<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChicPick" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_floating</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_floating</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChicPick.CardView" parent="Theme.ChicPick">
        <item name="cardElevation">40dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="ChicPickText" parent="TextAppearance.AppCompat.Body2" />
    <style name="ChicPickText.CardView" parent="ChicPickText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>