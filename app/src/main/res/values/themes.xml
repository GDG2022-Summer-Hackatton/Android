<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChicPick" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_floating</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_floating</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColorPrimary">@color/text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.ChicPick.CardView" parent="Theme.ChicPick">
        <item name="cardElevation">40dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="ChicPickText" parent="TextAppearance.AppCompat.Body2" />

    <style name="ChicPickText.CardView" parent="ChicPickText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/shape_floating_button</item>
        <item name="android:elevation">40dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/text_floating</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:checkedTextViewStyle">@style/myCheckedTextView</item>
    </style>

    <style name="myCheckedTextView" parent="@style/Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/text_floating</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/text_floating</item>
        <item name="colorSecondary">@color/text_floating</item>
    </style>

</resources>
