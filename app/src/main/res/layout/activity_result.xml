<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_result_type"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="24dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/chicken_f" />

        <TextView
            android:id="@+id/text_view_result_key_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:letterSpacing="0.25"
            android:lineSpacingExtra="-33sp"
            android:textColor="?attr/colorPrimary"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_result_type"
            tools:text="본뼈튀-단2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_result_comment_box"
            style="@style/Theme.ChicPick.CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_result_key_type">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingTop="24dp"
                android:paddingEnd="40dp"
                android:paddingBottom="24dp">

                <TextView
                    android:textAppearance="@style/ChicPickText.CardView"
                    android:id="@+id/text_view_result_comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="당신은 근본 그 차제입니다." />

                <TextView
                    android:textAppearance="@style/ChicPickText.CardView"
                    android:id="@+id/text_view_result_comment_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:paddingTop="40dp"
                    android:textSize="16sp"
                    tools:text="치킨 자체의 식감과 미묘한 맛을 즐깁니다.\n부위별로 보다 다채로운 식감을 즐기고 튀긴 치킨 특유의 바삭함을 선호합니다." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintEnd_toStartOf="@id/card_view_result_chicken_percentage_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_comment_box">

            <TextView
                android:id="@+id/text_view_result_chicken_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="BBQ 황금 올리브"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_percentage_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_result_chicken_1"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_comment_box">

            <TextView
                android:id="@+id/text_view_result_chicken_percentage_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="98%"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintEnd_toStartOf="@id/card_view_result_chicken_percentage_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_chicken_1">

            <TextView
                android:id="@+id/text_view_result_chicken_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="BHC 핫 후라이드"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_percentage_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_result_chicken_2"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_chicken_percentage_1">

            <TextView
                android:id="@+id/text_view_result_chicken_percentage_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="92%"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintEnd_toStartOf="@id/card_view_result_chicken_percentage_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_chicken_2">

            <TextView
                android:id="@+id/text_view_result_chicken_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="교촌치킨 레드 콤보"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.ChicPick.CardView"
            android:id="@+id/card_view_result_chicken_percentage_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_result_chicken_3"
            app:layout_constraintTop_toBottomOf="@id/card_view_result_chicken_percentage_2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp">

            <TextView
                android:id="@+id/text_view_result_chicken_percentage_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/ChicPickText.CardView"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                tools:text="86%"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>