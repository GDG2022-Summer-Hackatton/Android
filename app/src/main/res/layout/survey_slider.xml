<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Q1 / 14 - 근본 vs 변칙" />

    <HorizontalScrollView
        android:id="@+id/hori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_question">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12.5dp"
            android:paddingStart="12.5dp"
            android:orientation="horizontal">

            <include
                android:id="@+id/survey_slider_item1"
                layout="@layout/survey_slider_item"
                android:layout_marginEnd="12dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/survey_slider_item2"
                layout="@layout/survey_slider_item"
                android:layout_marginEnd="12dp"
                android:layout_width="300dp"
                android:layout_height="350dp" />

            <include
                android:id="@+id/survey_slider_item3"
                layout="@layout/survey_slider_item"
                android:layout_marginEnd="12dp"
                android:layout_width="300dp"
                android:layout_height="350dp" />

            <include
                android:id="@+id/survey_slider_item4"
                layout="@layout/survey_slider_item"
                android:layout_width="300dp"
                android:layout_height="350dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/long_arrow"
        app:layout_constraintTop_toBottomOf="@id/hori" />

</androidx.constraintlayout.widget.ConstraintLayout>